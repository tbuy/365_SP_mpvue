
.container {
  font-size: 28rpx;
}
.pub_card {
  width: 100%;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.pub_card_item {
  box-shadow: 5rpx 5rpx 10rpx #f5f5f5;
  background-color: #fff;
  border: 1rpx solid #f5f5f5;
  padding: 15rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  display: -ms-flexbox;
  display: flex;
}